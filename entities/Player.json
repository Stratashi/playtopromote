{
  "name": "Player",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "ID of the game session"
    },
    "player_name": {
      "type": "string"
    },
    "promotional_link": {
      "type": "string",
      "description": "Social media link to promote"
    },
    "score": {
      "type": "number",
      "default": 0
    },
    "is_alive": {
      "type": "boolean",
      "default": true
    },
    "position_x": {
      "type": "number",
      "default": 400
    },
    "position_y": {
      "type": "number",
      "default": 300
    },
    "health": {
      "type": "number",
      "default": 100
    }
  },
  "required": [
    "session_id",
    "player_name",
    "promotional_link"
  ]
}