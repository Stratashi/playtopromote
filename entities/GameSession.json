{
  "name": "GameSession",
  "type": "object",
  "properties": {
    "session_code": {
      "type": "string",
      "description": "Unique code for joining the game"
    },
    "status": {
      "type": "string",
      "enum": [
        "waiting",
        "playing",
        "finished"
      ],
      "default": "waiting"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "ended_at": {
      "type": "string",
      "format": "date-time"
    },
    "winner_id": {
      "type": "string"
    }
  },
  "required": [
    "session_code"
  ]
}